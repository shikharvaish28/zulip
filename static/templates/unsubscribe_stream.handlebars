<div id="unsubscribe_stream_modal" class="modal modal-bg hide new-style" tabindex="-1" role="dialog" aria-labelledby="unsubscribe_stream_modal_label" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="{{ 'Close' }}"><span aria-hidden="true">&times;</span></button>
        <h3 id="unsubscribe_stream_modal_label">{{t "Unsubscribe to #" }}<span class="stream_name">{{stream_name}}</span></h3>
    </div>
    <div class="modal-body">
        <div class="content">
            <p><strong>{{t "Unsubscribing immediately remove you from this stream, and you will need an invitation to join again." }}</strong> <br>{{t "Are you sure you want to do this?" }}</p>
        </div>
        <div id="unsubscribe-error"></div>
    </div>
    <div class="modal-footer">
        <button class="button rounded" data-dismiss="modal">{{t "Cancel" }}</button>
        <button class="button rounded btn-danger" id="unsubscribe_stream_button">{{t "Yes, Unsubscribe" }}</button>
    </div>
</div>
